# Contributor: leafduo <leafduo@gmail.com>
pkgname=linuxqq
pkgver=preview1.0_2
pkgrel=1
pkgdesc="QQ - The most popular free instant messaging program in China."
url="http://www.qq.com/"
license=("custom")
depends=('gtk2>=2.10','cairo','glibc>=2.0','pango>=1.0','glib2>=2.0')
arch=(i686)
makedepends=('tar')
source=(http://dl_dir.qq.com/linuxqq/linuxqq_preview1.0-2_i386.deb)
md5sums=('623ee5f58cfa0a242935f1bac9c45255')
build() {
    cd $startdir/src/
    ar vx linuxqq_preview1.0-2_i386.deb
    tar xfz data.tar.gz
    cp -a $startdir/src/usr $startdir/pkg
}
